<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0 1rem;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: white;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
  .btn-input {
    border-radius: 25px;
    padding: 0.5rem 3rem;
  }
  
  /* Ensure navbar background */
  .navbar-custom {
    background-color: white !important;  /* Ensures visibility */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 0.5rem 1rem;
  }

  /* Center navbar links and make them stack in mobile */
  @media (max-width: 768px) {
    .navbar-collapse {
      background-color: white; /* Ensures navbar bg when expanded */
      padding: 1rem;
    }
    .navbar-nav {
      text-align: center;
      width: 100%;
    }
    .navbar-nav .nav-link {
      padding: 10px 0;
      display: block; /* Makes them stack */
    }
  }
</style>

<nav class="navbar navbar-expand-md navbar-custom border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse text-center" id="navbarNavAltMarkup">
      <ul class="navbar-nav mx-auto">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <form class="d-flex" role="search">
            <input class="form-control me-2 btn-input" type="search" placeholder="Search &nbsp; Destinations" aria-label="Search">
            <button class="btn btn-search" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i> Search
            </button>
          </form>
        </li>
      </ul>

      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
        <% if(!curUser){ %>
        <li class="nav-item">
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login"><b>Log in</b></a>
        </li>
        <% } %>
        <% if(curUser){ %>
        <li class="nav-item">
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
