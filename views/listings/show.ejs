<% layout("/layouts/boilerplate") %>
<body>

  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3 class="card-title" ><%= listing.title %> <h3>
    </div>
  
    <div class="card listing-card col-6 offset-3 show-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text"> Owner : <b><%= listing.owner.username %></b></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text"> &#8377; <%= listing.price.toLocaleString("en-IN") %> </p> 
        <p class="card-text"> <%= listing.location %> </p> 
        <p class="card-text"> <%= listing.country %>  </p> 
        
        
      </div>
    </div>

    </form>
  </div>
  <div class="btns">
    <% if(curUser && curUser._id.equals(listing.owner._id)) { %> 
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-2 offset-3">Edit</a>
  <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
    <button class="btn btn-danger offset-5">Delete</button>
    </form>
    <% } %>
  </div>
 <div class="row mt-3">
  <hr>
   <div class="col-6 offset-3">
    <% if(curUser){ %>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" novalidate method="POST" class="needs-validation mb-3">
      <div class="mb-3 mt-3">
        <label for="rating">Rating</label>
        <fieldset class="starability-checkmark">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
    </div>

    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control" required></textarea>
    </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>
    <div>
    <% if(listing.review.length > 0) { %>
    <hr>
    <h4>Reviews</h4>
    <div class="row">
        <% for(let review of listing.review){ %>
            <div class="card col-5 mb-3 ms-3">
                <div class="card-body">
                  <p class="card-title"><h5><b>@<%= review.author.username %></b></h5></p>
                    <p class="card-text">
                      <p class="starability-result" data-rating="<%= review.rating %>">
                        Rated: <%= review.rating %> stars
                    </p>
                        <%= review.comment %>
                    </p>
                </div>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mb-1">
                    <button class="btn btn-sm btn-dark">Delete</button>
                </form>
            </div>
        <% } %>
    </div> 
    <% } %>
  </div>
</body>
