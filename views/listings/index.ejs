<% layout("/layouts/boilerplate") %>
<style>
  #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
  }
  .filters{
      text-align: center;
      margin-right: 1.5rem;
      margin-top: 1rem;
      opacity: 0.7;

  }
  .filters:hover{
      opacity: 1;
      cursor: pointer;
  }
  .filters p{
      font-size: 0.8rem;
  }

  .tax-toggle{
      border: 1px solid #000;
      border-radius: 1rem;
      height: 3.5rem;
      padding: 1rem;
      margin-left: 21rem;
      display: flex;
      align-items: center;
  }
</style>
<body>
    
    <!-- <h3>All Listings</h3> -->
    <div id="filters" class="">
      <div class="filters">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
      </div>
      <div class="filters">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
      </div>
      <div class="filters">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
      </div>
      <div class="filters">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountains</p>
      </div>
      <div class="filters">
          <div><i class="fa-solid fa-fort-awesome"></i></div>
          <p>Castles</p>
      </div>
      <div class="filters">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
      </div>
      <div class="filters">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
      </div>
      <div class="filters">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Arctic</p>
      </div>

  </div>
    <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%=listing._id %>" class="listing-link">
          <div class="col">  <!-- Move .col here -->
            <div class="card listing-card" style="width: 22rem;">
              <img 
                src="<%= listing.image.url %>" 
                class="card-img-top" 
                alt="listing_image"
                style="height: 20rem">
                <div class="card-img-overlay"></div>
              <div class="card-body">
                <p class="card-text"> 
                  <b><%= listing.title %></b> <br>
                  &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                  
                </p>
              </div>
            </div>
          </div>
        </a>
      <% } %>
    </div>
       

</body>

